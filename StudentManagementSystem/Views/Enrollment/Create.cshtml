@model Enrollment

@{
    SelectList courses = new SelectList(ViewBag.courses, "Id", "Name");
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0 fw-bold">
                <i class="bi bi-building-add me-2"></i> Enroll in a Course
            </h3>
        </div>

        <div class="card-body p-4">
            <form asp-action="Enroll">

                <input type="hidden" asp-for="StudentId" value="@ViewBag.studentId" />

                <div class="mb-3">
                    <label asp-for="CourseId" class="form-label fw-bold">Select Course</label>
                    <select asp-for="CourseId" asp-items="courses" class="form-select">
                        <option disabled selected value="">-- Select Course --</option>
                    </select>
                    <span asp-validation-for="CourseId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save2 me-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
