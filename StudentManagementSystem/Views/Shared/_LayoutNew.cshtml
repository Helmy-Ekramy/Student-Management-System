<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Student Management System for managing students, departments, and courses" />
    <meta name="author" content="Student Management Team" />
    <title>@ViewData["Title"] - Student Management System</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-success shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-mortarboard me-2 fs-4"></i>
                Student Management System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto gap-2">
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-white" asp-controller="Student" asp-action="GetAll" >
                            <i class="bi bi-people-fill me-1"></i> Students
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-white" asp-controller="Department" asp-action="GetAll">
                            <i class="bi bi-building me-1"></i> Departments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-white" asp-controller="Course" asp-action="GetAll">
                            <i class="bi bi-book me-1"></i> Courses
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-semibold text-white" asp-controller="Instructor" asp-action="GetAll">
                            <i class="bi bi-person-fill me-1"></i> Instructors
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <main class="container py-4" >
        @RenderBody()
    </main>


    <!-- Scroll to top button -->
    <button onclick="scrollToTop()" id="scrollTopBtn"
            class="btn btn-primary rounded-circle shadow"
            style="position: fixed; bottom: 20px; right: 20px; display: none; z-index: 999;">
        <i class="bi bi-arrow-up"></i>
    </button>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script>
        // Simple scroll-to-top button logic
        const scrollBtn = document.getElementById("scrollTopBtn");
        window.onscroll = () => {
            scrollBtn.style.display = (document.documentElement.scrollTop > 100) ? "block" : "none";
        };
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>

</html>

@RenderSection("Scripts", required: false)

