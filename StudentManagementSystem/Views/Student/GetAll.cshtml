@using StudentManagementSystem.ViewModels
@model List<StudentGetAllModel>


<div class="container my-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-gradient text-bg-success text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0 fw-bold">Students</h3>
          


            <form asp-action="GetAll" method="get" class="d-flex mb-3">
                <input type="text"
                       name="search"
                       class="form-control me-2"
                       placeholder="Search By Name"
                       aria-label="Search"
                       value="@Context.Request.Query["search"]" />
                <button type="submit" class="btn btn-light text-primary fw-semibold shadow-sm">Search</button>
            </form>



            <a asp-action="Create" class="btn btn-light text-primary fw-semibold shadow-sm">
                <i class="bi bi-plus-circle me-1"></i> Add New
            </a>
        </div>

        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle text-center rounded-3 overflow-hidden">
                    <thead class="bg-secondary bg-opacity-50 text-white">
                        <tr>
                            <th style="width: 10%;">Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>DOB</th>
                            <th>Department</th>



                            <th style="width: 25%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var st in Model)
                        {
                            <tr>
                                <td>@st.Id</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@st.Id" class="text-dark text-decoration-none fw-semibold">
                                        @st.Name
                                    </a>
                                </td>

                                <td class="fw-semibold">@st.Email</td>
                                <td class="fw-semibold">@st.DateOfBirth.ToString("yyyy-MM-dd")</td>
                                <td class="fw-semibold">@st.DeptName</td>



                                <td>
                                    <a asp-action="Edit" asp-route-id="@st.Id" class="btn btn-outline-warning ">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@st.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                    <a asp-action="Details" asp-route-id="@st.Id" class="btn btn-outline-primary ">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
            if (window.location.search.length > 0) {
                const cleanUrl = window.location.protocol + "//" + window.location.host + window.location.pathname;
                window.history.replaceState({}, document.title, cleanUrl);
            }
     
    </script>
}



