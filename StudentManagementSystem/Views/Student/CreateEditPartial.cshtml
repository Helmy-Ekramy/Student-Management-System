@model Student
@{
    SelectList depts = new SelectList(ViewBag.depts, "Id", "Name");
}
<div class="mb-3">

    <label asp-for="Name" class="form-label fw-semibold"></label>
    <input asp-for="Name" class="form-control rounded-3" />
    <span asp-validation-for="Name" class="text-danger small"></span>
</div>

<div class="mb-3">
    <label asp-for="Email" class="form-label fw-semibold"></label>
    <input asp-for="Email" type="email" class="form-control rounded-3" />
    <span asp-validation-for="Email" class="text-danger small"></span>
</div>

<div class="mb-3">
    <label asp-for="DateOfBirth" class="form-label fw-semibold">Date Of Birth</label>
    <input asp-for="DateOfBirth" type="date" class="form-control rounded-3" />
    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
</div>

<div class="mb-3">
    <label asp-for="DepartmentId" class="form-label fw-semibold">Department</label>
    <select asp-for="DepartmentId" asp-items="depts" class="form-select rounded-3">
        <option value="">-- Select Department --</option>
    </select>
    <span asp-validation-for="DepartmentId" class="text-danger small"></span>
</div>


<div class="d-flex justify-content-end mt-4">
    <button type="submit" class="btn btn-outline-success">
        <i class="bi bi-save2 me-1"></i> Save
    </button>
</div>

