@model Instructor

<input asp-for="Id" hidden />
<input asp-for="@Model.OfficeAssignment.InstructorId" hidden />


<div class="mb-3">
    <label asp-for="Name" class="form-label fw-semibold"></label>
    <input asp-for="Name" class="form-control rounded-3" placeholder="Enter Instructor name" />
    <span asp-validation-for="Name" class="text-danger small"></span>

    <br />


    <label asp-for="HireDate" class="form-label fw-semibold"></label>
    <input asp-for="HireDate" class="form-control rounded-3" placeholder="Enter Hire Date" />
    <span asp-validation-for="HireDate" class="text-danger small"></span>

    <br />
    <label asp-for="OfficeAssignment.Location" class="form-label fw-semibold"></label>
    <input asp-for="OfficeAssignment.Location" class="form-control rounded-3" placeholder="Enter office Location" />
    <span asp-validation-for="OfficeAssignment.Location" class="text-danger small"></span>
</div>

<div class="d-flex justify-content-end mt-4">
    @* <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Back
                    </a> *@
    <button type="submit" class="btn btn-outline-success">
        <i class="bi bi-save2 me-1"></i> Save
    </button>
</div>



